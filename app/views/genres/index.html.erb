<h1>Listing genres</h1>

<% @genres.each do |genre| %>
  <article>
  	<h2><%= genre.name %></h2>
  	<p><%= genre.description %></p>
  	<%= link_to 'Show', genre %>
    <%= link_to 'Edit', edit_genre_path(genre) %>
    <%= link_to 'Destroy', genre, :confirm => 'Are you sure?', :method => :delete %>
  </article>
<% end %>

<%= link_to 'New genres', new_genre_path %>
